{{#if error}}
<div class="error-container">
  <p>Please select cast member from the list!</p>
</div>
{{/if}}

<section id="attachCast">
  <div class="attachCastSection">
    <h1>Attach New Cast</h1>
    <div class="attach-form">
      <h2>{{movie.title}}</h2>
      <img class="movie" src="{{movie.imageURL}}" />
      <form action="" method="">
        <label for="cast">Cast</label>
        <select id="cast" name="cast">
          <option value="none" {{#if error}} class="error" {{/if}} selected>--------</option>
          {{#each allCast}}
            <option value="{{_id}}" selected>{{name}}</option>
          {{/each}}
        </select>
        <div id="center-btn">
          <button id="create-btn">Add Cast</button>
        </div>
      </form>
    </div>
  </div>
</section>